<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_50">

    <!-- Top App Bar (Green Header) -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/header_green"
        android:elevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_4">

            <!-- Menu Icon -->
            <ImageView
                android:id="@+id/btnMenu"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_menu"
                android:contentDescription="Menu"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- Logo (centered) - white inverted -->
            <ImageView
                android:id="@+id/ivLogoHeader"
                android:layout_width="120dp"
                android:layout_height="32dp"
                android:src="@drawable/agrisonic_logo"
                android:adjustViewBounds="true"
                android:contentDescription="@string/app_logo"
                app:tint="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- Logout Icon -->
            <ImageView
                android:id="@+id/btnLogout"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_logout"
                android:contentDescription="Logout"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- User Name Below Header -->
        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/spacing_2"
            android:text="User Name"
            android:textSize="@dimen/text_sm"
            android:textColor="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_4">

            <!-- Date and Time -->
            <TextView
                android:id="@+id/tvDateTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textSize="@dimen/text_lg"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="@dimen/spacing_3" />

            <!-- Location -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/spacing_6">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📍 "
                    android:textSize="@dimen/text_sm" />

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Getting location..."
                    android:textSize="@dimen/text_sm"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

            <!-- Weather Card (Green-200, rounded) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_6"
                app:cardCornerRadius="24dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/green_200">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_6">

                    <!-- Weather Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/spacing_4">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Current Weather"
                            android:textSize="@dimen/text_lg"
                            android:textStyle="bold"
                            android:textColor="@color/gray_800" />

                        <ImageView
                            android:id="@+id/btnRefreshWeather"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_rotate"
                            android:contentDescription="Refresh"
                            android:tint="@color/gray_600"
                            android:clickable="true"
                            android:focusable="true" />

                    </LinearLayout>

                    <!-- Weather 2x2 Grid -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Row 1 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="@dimen/spacing_4">

                            <!-- Temp -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Temp:"
                                    android:textSize="@dimen/text_sm"
                                    android:textStyle="bold"
                                    android:textColor="@color/gray_700" />

                                <TextView
                                    android:id="@+id/tvTemperature"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="28°C"
                                    android:textSize="@dimen/text_lg"
                                    android:textStyle="bold"
                                    android:textColor="@color/gray_800" />

                            </LinearLayout>

                            <!-- Humidity -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Humidity:"
                                    android:textSize="@dimen/text_sm"
                                    android:textStyle="bold"
                                    android:textColor="@color/gray_700" />

                                <TextView
                                    android:id="@+id/tvHumidity"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="65%"
                                    android:textSize="@dimen/text_lg"
                                    android:textStyle="bold"
                                    android:textColor="@color/gray_800" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Row 2 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- Wind Speed -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Wind Speed:"
                                    android:textSize="@dimen/text_sm"
                                    android:textStyle="bold"
                                    android:textColor="@color/gray_700" />

                                <TextView
                                    android:id="@+id/tvWindSpeed"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="12 km/h"
                                    android:textSize="@dimen/text_lg"
                                    android:textStyle="bold"
                                    android:textColor="@color/gray_800" />

                            </LinearLayout>

                            <!-- Pressure -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Pressure:"
                                    android:textSize="@dimen/text_sm"
                                    android:textStyle="bold"
                                    android:textColor="@color/gray_700" />

                                <TextView
                                    android:id="@+id/tvPressure"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1013 hPa"
                                    android:textSize="@dimen/text_lg"
                                    android:textStyle="bold"
                                    android:textColor="@color/gray_800" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Features Grid (2 columns, green-200 cards) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvFeatures"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginBottom="@dimen/spacing_6" />

            <!-- Market Trends Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Market Trends"
                android:textSize="@dimen/text_lg"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="@dimen/spacing_4"
                android:paddingStart="@dimen/spacing_2"
                android:paddingEnd="@dimen/spacing_2" />

            <!-- Market Trends Placeholder -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/green_200">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="@dimen/spacing_4">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Market Trends"
                        android:textSize="@dimen/text_base"
                        android:textStyle="bold"
                        android:textColor="@color/gray_800" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_2"
                        android:text="Coming Soon"
                        android:textSize="@dimen/text_sm"
                        android:textColor="@color/gray_600" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
